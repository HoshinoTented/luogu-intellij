<idea-plugin>
	<id>luogu-intellij</id>
	<name>luogu-intellij</name>
	<version>0.0.2</version>
	<!--一些开发者信息了-->
	<vendor email="limbolrain@gmail.com"
			url="">Hoshino Tented
	</vendor>

	<description><![CDATA[
      A IntelliJ Plugin for Luogu
	  It can be used to submit your code
    ]]></description>

	<change-notes><![CDATA[
	  * 0.0.1
	    Base function: such as login or submit code
    ]]>
	</change-notes>

	<idea-version since-build="192.5728"/>

	<extensions defaultExtensionNs="com.intellij">
		<!-- Add your extensions here -->
	</extensions>

	<actions>
		<group id="org.hoshino9.luogu.intellij.actions.Actions"
			   text="Luogu"
			   popup="true">
			<add-to-group group-id="ToolsMenu"
						  anchor="last"/>
		</group>

		<action id="org.hoshino9.luogu.intellij.actions.LoginAction"
				class="org.hoshino9.luogu.intellij.actions.LoginAction"
				text="Log in to Luogu"
				description="Log in to Luogu">
			<add-to-group group-id="org.hoshino9.luogu.intellij.actions.Actions"
						  anchor="first"/>
		</action>

		<action id="org.hoshino9.luogu.intellij.actions.SubmitAction"
				class="org.hoshino9.luogu.intellij.actions.SubmitAction"
				text="Submit Code"
				description="Submit code to specified problem">
			<add-to-group group-id="org.hoshino9.luogu.intellij.actions.Actions"
						  anchor="first"/>
		</action>
	</actions>

</idea-plugin>